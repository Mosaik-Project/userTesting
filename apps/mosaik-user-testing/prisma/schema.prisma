datasource db {
  provider = "mongodb"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  lastName  String?
  otps      Otp[]
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model MosaikUser {
  createdAt       DateTime @default(now())
  email           String?
  firstName       String?
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  isEmailVerified Boolean?
  isPhoneVerified Boolean?
  lastName        String?
  password        String?
  phoneNumber     String?
  updatedAt       DateTime @updatedAt
}

model Otp {
  code      String?
  createdAt DateTime  @default(now())
  expiresAt DateTime?
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  purpose   String?
  updatedAt DateTime  @updatedAt
  user      User?     @relation(fields: [userId], references: [id])
  userId    String?   @db.ObjectId
}
